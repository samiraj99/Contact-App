<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryzen.contacts.AddContact"
    android:paddingRight="@dimen/layout_padding"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingTop="@dimen/layout_padding"
    android:paddingBottom="@dimen/layout_padding"
    >

    <ImageView
        android:id="@+id/picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_photo_camera_black_24dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/FirstName"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_person_black_24dp" />

    <EditText
        android:id="@+id/FirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="40dp"
        android:hint="@string/first_name"
        android:inputType="text" />


    <EditText
        android:id="@+id/LastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/FirstName"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:hint="@string/last_name"
        android:inputType="text"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/EmailId"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_email_black_30dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LastName"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:hint="@string/email_id"
        android:id="@+id/EmailId"
        android:inputType="textEmailAddress"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/PhoneNo"
        android:src="@drawable/ic_phone_iphone_black_24dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/EmailId"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:hint="@string/phone_no"
        android:id="@+id/PhoneNo"
        android:inputType="phone"
        android:maxLength="15"
        />

    <Button

        android:id="@+id/Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/save"
        android:textSize="18sp" />


</RelativeLayout>
